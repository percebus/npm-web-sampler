{
  "name": "npm-web-sampler",
  "version": "0.1.0",
  "description": "npm packages sampler",
  "main": "Gruntfile.js",
  "scripts": {
    "pip:install:dev": "python -m pip install -r ./requirements.dev.txt",
    "pip:install:prd": "python -m pip install -r ./requirements.prd.txt",
    "pip:install:all": "python -m pip install -r ./requirements.txt",
    "npm:install:global:ci": "npm install --location=global bower grunt-cli",
    "npm:install:global:all": "npm install --location=global bower grunt-cliyarn open-cli",
    "setup": "npm run pip:install:all && npm run npm:install:global:all",
    "setup:ci": "npm run pip:install:all && npm run npm:install:global:ci",
    "bower:install": "bower update --allow-root && bower install --allow-root",
    "yarn:licenses:list:prod": "yarn licenses list --prod > dist/LICENSES.txt",
    "yarn:licenses:generate-disclaimer:prod": "yarn licenses generate-disclaimer --prod > dist/LICENSES.md",
    "yarn:licenses:prod": "npm run yarn:licenses:list:prod && npm run yarn:licenses:generate-disclaimer:prod",
    "LICENSES": "npm run yarn:licenses:prod",
    "grunt": "grunt --verbose --color",
    "grunt:lint": "npm run grunt -- lint",
    "grunt:dist": "npm run grunt -- dist",
    "lint": "npm run grunt:lint",
    "pretestem:ci": "npm run lint",
    "testem:ci": "testem ci --reporter xunit > testem.xunit.xml",
    "prejest:ci": "npm run lint",
    "jest:ci": "jest --ci",
    "jest:ci:unit": "npm run jest:ci -- unit.spec.js",
    "jest:ci:rest": "npm run jest:ci -- rest.spec.js",
    "test": "npm run jest:ci:unit",
    "dist": "npm run grunt:dist",
    "postdist": "npm run LICENSES",
    "python:http.server": "cd dist && python -m http.server 8080",
    "start": "npm run python:http.server",
    "docker:build": "docker build --no-cache --pull --tag npm-web-sampler:latest .",
    "docker:images": "docker images --all | grep -a 'npm-web-sampler'",
    "docker:images:rm": "docker images --all | grep -a 'npm-web-sampler' | awk '{print $3}' | xargs docker rmi --force",
    "docker:run:default": "docker run -p 8080:8080 npm-web-sampler",
    "docker:run:ls": "npm run docker:run:default -- ls -la",
    "docker:containers": "docker ps --all | grep -a 'npm-web-sampler'",
    "docker:containers:running": "docker ps --all --filter status=running | grep -a 'npm-web-sampler'",
    "docker:containers:stop": "docker ps --all --filter status=running | grep -a 'npm-web-sampler' | awk '{print $1}' | xargs docker stop",
    "docker:containers:exited:rm": "docker ps --all --filter status=exited | tail -n +2 | awk '{print $1}' | xargs docker rm",
    "docker:containers:rm": "docker rm $(docker ps -a -q)",
    "docker:clean": "npm run docker:containers:stop && npm run docker:containers:exited:rm && npm run docker:images:rm",
    "verify": "npm test && npm run dist",
    "verify:docker": "npm run docker:build && npm run docker:run:default",
    "browser": "open http://127.0.0.1:8080",
    "validate": "npm run jest:ci:rest"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/percebus/npm-web-sampler.git"
  },
  "keywords": [
    "npm",
    "git",
    "html",
    "lint",
    "grunt",
    "jest",
    "frisby"
  ],
  "author": "percebus",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/percebus/npm-web-sampler/issues"
  },
  "homepage": "https://github.com/percebus/npm-web-sampler#readme",
  "devDependencies": {
    "dockerlint": "latest",
    "frisby": "^2.1.3",
    "grunt": "^1.4.1",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-htmllint": "^0.3.0",
    "grunt-jsonlint": "^2.1.3",
    "grunt-shell": "^3.0.1",
    "grunt-yamllint": "^0.3.0",
    "jest": "^27.4.7",
    "jest-github-actions": "^0.2.0",
    "jest-junit": "^14.0.0",
    "load-grunt-tasks": "^5.1.0",
    "lodash": "^4.17.21",
    "standard": "latest",
    "testem": "latest"
  }
}
